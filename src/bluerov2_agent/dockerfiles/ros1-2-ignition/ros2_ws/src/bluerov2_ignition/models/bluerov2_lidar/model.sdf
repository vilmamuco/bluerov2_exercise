<?xml version="1.0"?>
<sdf version="1.9">
  <model name="bluerov2_lidar">
    <include merge="true">
      <uri>bluerov2</uri>
    </include>

    <link name="lidar_link">
      <pose>0 -0.1305 0.168 0 0 0</pose>
      <!-- fake values, ping360 is heavier -->
      <inertial>
        <pose>0 0 0 0 0 0</pose>
        <mass>0.01</mass>
        <inertia>
          <ixx>0.000009427233333333334</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.000009427233333333333</iyy>
          <iyz>0</iyz>
          <izz>0.000007372799999999999</izz>
        </inertia>
      </inertial>

      <visual name="lidar_visual">
        <pose>0 0 0 0 0 0</pose>
        <transparency>0.5</transparency>
        <geometry>
          <cylinder>
            <radius>0.0385</radius>
            <length>0.083</length>
          </cylinder>
        </geometry>
      </visual>

      <collision name="lidar_collision">
        <pose>0 0 0.01 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.0385</radius>
            <length>0.083</length>
          </cylinder>
        </geometry>
      </collision>

      <sensor name='gpu_lidar' type='gpu_lidar'>"
        <pose relative_to='lidar_frame'>0 0 0 0 0 0</pose>
        <topic>lidar</topic>
        <update_rate>0.57142857142</update_rate>
        <ray>
            <scan>
                <horizontal>
                    <samples>360</samples>
                    <resolution>1</resolution>
                    <min_angle>-0.7854</min_angle>
                    <max_angle>0.7854</max_angle>
                </horizontal>
                <vertical>
                    <samples>1</samples>
                    <resolution>0.01</resolution>
                    <min_angle>0</min_angle>
                    <max_angle>0</max_angle>
                </vertical>
            </scan>
            <range>
                <min>0.075</min>
                <max>2.0</max>
                <resolution>0.01</resolution>
            </range>
        </ray>
        <always_on>1</always_on>
        <visualize>true</visualize>
      </sensor>
    </link>

    <joint name="lidar_joint" type="fixed">
      <parent>base_link</parent>
      <child>lidar_link</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <frame name="lidar_frame" attached_to='lidar_link'>
      <pose>0.8 0 0.5 0 0 0</pose>
    </frame>


  </model>
</sdf>
